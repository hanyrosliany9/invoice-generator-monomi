# E2E Test Environment Configuration - Optimized Docker-First Setup
NODE_ENV=test

# Application URLs - Use Docker service names when running in Docker container network
BASE_URL=http://frontend-test:3000
API_URL=http://backend-test:5000/api/v1

# Application URLs - Use localhost when testing from host
HOST_BASE_URL=http://localhost:8080
HOST_API_URL=http://localhost:5001/api/v1

# Database - Use Docker service names when running in Docker
DATABASE_URL=postgresql://invoiceuser:invoicepass@db-test:5432/invoices_test

# Authentication
JWT_SECRET=test-jwt-secret-key-for-e2e-testing
ADMIN_EMAIL=admin@bisnis.co.id
ADMIN_PASSWORD=password123
USER_EMAIL=user@bisnis.co.id
USER_PASSWORD=password123

# Redis - Use Docker service names when running in Docker
REDIS_URL=redis://:redispass@redis-test:6379

# Test Configuration - Optimized for performance
SLOW_MO=0
TIMEOUT=10000
HEADLESS=true
SKIP_WEBSERVER=true

# Performance Test Thresholds
PERFORMANCE_THRESHOLD_PAGE_LOAD=3000
PERFORMANCE_THRESHOLD_API_RESPONSE=500
PERFORMANCE_THRESHOLD_MEMORY_USAGE=100

# Visual Regression Test Settings
VISUAL_THRESHOLD=0.5
VISUAL_UPDATE_SNAPSHOTS=false

# Console Log Monitoring
CONSOLE_LOG_LEVEL=warning
CONSOLE_LOG_CAPTURE=true

# Report Configuration
REPORT_DIRECTORY=test-results
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
TRACE_MODE=on-first-retry

# Indonesian Business Settings
MATERAI_THRESHOLD=5000000
CURRENCY_LOCALE=id-ID
TIMEZONE=Asia/Jakarta
DEFAULT_LANGUAGE=id

# Test Data
TEST_CLIENT_NAME=PT Test Company
TEST_PROJECT_NAME=Test Project
TEST_INVOICE_AMOUNT=75000000
TEST_QUOTATION_AMOUNT=50000000

# Parallel Execution
MAX_WORKERS=4
RETRIES=2
SHARD_COUNT=4