{
  "name": "invoice-generator-frontend",
  "version": "1.0.0",
  "description": "Monomi Finance - Financial Management Platform - React Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite --force --host 0.0.0.0 --port 3000 --clearScreen false",
    "build": "tsc --project tsconfig.production.json && NODE_ENV=production vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:edge-cases": "vitest --run src/utils/test-helpers.test.ts",
    "validate": "npm run type-check && npm run lint && npm run test",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc --noEmit"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.5.1",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@hookform/resolvers": "^3.9.0",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-query-devtools": "^5.59.16",
    "@types/aria-query": "^5.0.4",
    "ag-grid-community": "^32.2.2",
    "ag-grid-react": "^32.2.2",
    "antd": "^5.26.4",
    "axios": "^1.7.7",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.1.7",
    "html2canvas": "^1.4.1",
    "i18next": "^24.0.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.6.1",
    "jspdf": "^2.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.0",
    "react-i18next": "^15.0.2",
    "react-router-dom": "^6.28.0",
    "react-window": "^1.8.10",
    "react-window-infinite-loader": "^1.0.10",
    "recharts": "^2.12.7",
    "web-vitals": "^4.2.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.1.0",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "^3.2.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "1.6.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "jest-axe": "^9.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "1.6.0"
  }
}
