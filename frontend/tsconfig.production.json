{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* PRACTICAL Linting - Business Ready */
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    
    /* DISABLED - Too strict for business apps */
    // "noUnusedLocals": false,              // Allow unused vars in development
    // "noUnusedParameters": false,          // Allow unused callback params
    // "noUncheckedIndexedAccess": false,    // Allow CSS modules
    // "exactOptionalPropertyTypes": false,  // Allow Ant Design flexibility
    // "noPropertyAccessFromIndexSignature": false, // Allow styles.className
    
    /* Module resolution */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/pages/*": ["src/pages/*"],
      "@/services/*": ["src/services/*"],
      "@/store/*": ["src/store/*"],
      "@/types/*": ["src/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts", 
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build", 
    "coverage",
    "vite.config.ts",
    "eslint.config.js",
    "**/*.test.*",
    "**/*.spec.*", 
    "**/__tests__/**/*",
    "**/*.stories.*",
    "src/components/mobile/**/*",
    "src/components/testing/**/*",
    "src/components/security/**/*",
    "src/components/performance/**/*",
    "src/components/navigation/**/*"
  ]
}