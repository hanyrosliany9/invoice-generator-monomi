# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database
DB_PASSWORD=your_secure_db_password_here
REDIS_PASSWORD=your_secure_redis_password_here
DATABASE_URL=postgresql://invoiceuser:your_secure_db_password_here@db:5432/invoices?schema=public
POSTGRES_USER=invoiceuser
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_DB=invoices

# JWT Authentication
JWT_SECRET=your_very_long_random_jwt_secret_string_at_least_32_characters
JWT_EXPIRES_IN=24h

# Application
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-domain.com

# Redis (Session Management)
REDIS_URL=redis://redis:6379

# Email Configuration (Optional - can be configured later)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@example.com
FROM_NAME="Indonesian Business System"

# Security
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# PDF Generation
PDF_TIMEOUT=30000
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Cloudflare Tunnel (optional - only if using Cloudflare Tunnel)
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here
