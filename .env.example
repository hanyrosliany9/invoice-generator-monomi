# Database
DATABASE_URL="postgresql://username:password@localhost:5432/invoice_generator?schema=public"
POSTGRES_USER=invoice_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=invoice_generator

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# WebSocket & Real-time Collaboration
SOCKET_IO_CORS_ORIGIN=http://localhost:3001
VITE_WS_URL=http://localhost:5000

# PDF Export (Puppeteer)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
TEMP_EXPORT_DIR=./temp/exports

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME="Indonesian Business System"

# Redis (Session Management)
REDIS_URL=redis://localhost:6379

# Payment Gateways
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Indonesian APIs
CURRENCY_API_KEY=your_currency_api_key
LOCATION_API_URL=https://api.binderbyte.com/wilayah

# ============================================
# External API Configuration (Call Sheet Auto-Fill)
# ============================================
# All APIs used are FREE with no API keys required:
# - Nominatim (OpenStreetMap) - Geocoding
# - Open-Meteo - Weather forecasts
# - Sunrise-Sunset.org - Sun times
# - Overpass API (OpenStreetMap) - Hospital search

# API Timeouts (milliseconds)
EXTERNAL_API_TIMEOUT=10000           # 10 seconds for most APIs
OVERPASS_API_TIMEOUT=15000           # 15 seconds (Overpass is slower)

# Nominatim Rate Limiting (REQUIRED - OpenStreetMap policy)
GEOCODING_RATE_LIMIT_MS=1000         # 1 second between requests (do not reduce!)

# Hospital Search Configuration
HOSPITAL_SEARCH_RADIUS_KM=5          # Initial search radius (expands to 10km, then 20km if needed)

# Google Maps (for address autocomplete in frontend)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Future: Paid API Keys (Optional - currently unused)
# OPENWEATHER_API_KEY=your_api_key_here

# Security
RATE_LIMIT_TTL=60000  # 1 minute
RATE_LIMIT_MAX=100    # requests per minute

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Database Initialization
# Set to 'false' to enable automatic database seeding on container startup
# Set to 'true' to skip database initialization (useful for production)
SKIP_DB_INIT=false